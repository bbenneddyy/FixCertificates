generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id         String   @id @default(cuid())
  email      String   @unique
  name       String?
  password   String
  created_at DateTime @default(now())
}

model Registration {
  id           String     @id @default(cuid())
  education    String
  title        String
  firstname    String
  lastname     String
  email        String     @unique
  phone        String
  allergy      String?
  place        String
  reason       String?
  status       String     @default("pending")
  created_at   DateTime   @default(now())
  file_type    String?
  sessionOne   String?
  sessionTwo   String?
  sessionThree String?
  sessionFour  String?
  sessionFive  String?
  sessionSix   String?
  questions    Question[]
}

model Question {
  id            Int          @id @default(autoincrement())
  participantId String
  sessionNum    Int
  question      String
  created_at    DateTime     @default(now())
  participant   Registration @relation(fields: [participantId], references: [id])
}
